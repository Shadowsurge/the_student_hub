<% include ../templates/header.ejs %>

<div class="container">

  <h1 id="formHeader">Creating New Blog...</h1>
  <!-- blog creation code  -->
    <form id="createBlogForm" action="/blogs" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="title" placeholder="Title...">
      </div>

      <div class="form-group">
        <textarea class = "form-control" name="content" rows="8" cols="80" placeholder="Write your blog post here!"></textarea>
      </div>

      <div class="form-group">
        <input class="form-control" type="text" name="author" placeholder="Submitted by? Defaults to anonymous">
      </div>

      <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Create Blog">
      </div>
    </form>
  <!-- end blog creation code -->
</div>


